<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Danh sách Todos</h1>
    <%= link_to "Thêm Todo", new_todo_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded text-lg font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">
            Tiêu đề
          </th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">
            Mô tả
          </th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">
            Độ ưu tiên
          </th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">
            Trạng thái
          </th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">
            Thao tác
          </th>
        </tr>
      </thead>
      <%# Render todos list in index.html.erb (index.html.erb) with id "todos" mapping
       after_create_commit -> { broadcast_append_to :todos, target: "todos" }  in model todo.rb %>
      <tbody id="todos" class="bg-white divide-y divide-gray-200">
        <% @form.each do |todo| %>
          <tr class="hover:bg-gray-50" id="<%= dom_id(todo) %>">
            <td class="px-4 py-4">
              <div class="text-sm font-medium text-gray-900">
                <%= todo.title %>
              </div>
            </td>
            <td class="px-4 py-4">
              <div class="text-sm text-gray-700">
                <%= todo.description %>
              </div>
            </td>
            <td class="px-4 py-4">
              <span class="px-3 py-1 text-sm font-medium rounded-full
                <%= case todo.priority
                    when 'low' then 'bg-green-100 text-green-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    when 'high' then 'bg-red-100 text-red-800'
                    end %>">
                <%= todo.priority %>
              </span>
            </td>
            <td class="px-4 py-4">
              <span class="px-3 py-1 text-sm font-medium rounded-full
                <%= case todo.status
                    when 'pending' then 'bg-gray-100 text-gray-800'
                    when 'progress' then 'bg-blue-100 text-blue-800'
                    when 'done' then 'bg-green-100 text-green-800'
                    end %>">
                <%= todo.status %>
              </span>
            </td>
            <td class="px-4 py-4">
              <div class="flex space-x-2">
                <%= link_to edit_todo_path(todo), class: "bg-green-500 hover:bg-green-600 text-white px-3 py-2 rounded text-sm font-medium" do %>
                  Sửa
                <% end %>
                
                <%= link_to todo_path(todo),
                    data: { turbo_frame: "todo_details_frame", turbo_action: "replace" },
                    class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded text-sm font-medium" do %>
                  Xem
                <% end %>

                <%= link_to todo_path(todo),
                    data: { turbo_method: :delete, turbo_confirm: "Bạn có chắc chắn muốn xóa todo \"#{todo.title}\"?" },
                    class: "bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded text-sm font-medium" do %>
                  Xóa
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

  <%# render turbo_frame_tag when click on todo %>
  <%= turbo_frame_tag "todo_details_frame" do %><% end %>
</div>

<%# Register methods turbo_stream :todos %>
<%= turbo_stream_from :todos %>
