<%= turbo_frame_tag "todo_details_frame" do %>
  <div class="max-w-4xl mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Chi tiết Todo</h1>
    </div>

    <div class="bg-white rounded-lg shadow-sm border">
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Thông tin cơ bản -->
        <div>
          <h2 class="text-lg font-semibold mb-4">Thông tin cơ bản</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Tiêu đề</label>
              <p class="text-lg text-gray-900"><%= @form.title %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
              <p class="text-gray-700"><%= @form.description %></p>
            </div>
            <div class="flex space-x-4 text-sm text-gray-500">
              <span>Ngày tạo: <%= @form.created_at.strftime("%d/%m/%Y %H:%M") %></span>
              <span>Cập nhật: <%= @form.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-lg font-semibold mb-4">Trạng thái & Ưu tiên</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Độ ưu tiên</label>
              <span class="px-3 py-1 text-sm font-medium rounded-full
                <%= case @form.priority
                    when 'low' then 'bg-green-100 text-green-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    when 'high' then 'bg-red-100 text-red-800'
                    end %>">
                <%= @form.priority %>
              </span>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
              <span class="px-3 py-1 text-sm font-medium rounded-full
                <%= case @form.status
                    when 'pending' then 'bg-gray-100 text-gray-800'
                    when 'progress' then 'bg-blue-100 text-blue-800'
                    when 'done' then 'bg-green-100 text-green-800'
                    end %>">
                <%= @form.status %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Danh sách Tasks -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <h2 class="text-lg font-semibold mb-4">Tasks</h2>

        <% if @form.tasks.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Tiêu đề</th>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Mô tả</th>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Ưu tiên</th>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Trạng thái</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @form.tasks.each do |task| %>
                  <tr>
                    <td class="px-4 py-4 text-sm text-gray-900"><%= task.title %></td>
                    <td class="px-4 py-4 text-sm text-gray-700"><%= task.description %></td>
                    <td class="px-4 py-4">
                      <span class="px-3 py-1 text-sm font-medium rounded-full
                        <%= case task.priority
                            when 'low' then 'bg-green-100 text-green-800'
                            when 'medium' then 'bg-yellow-100 text-yellow-800'
                            when 'high' then 'bg-red-100 text-red-800'
                            end %>">
                        <%= task.priority %>
                      </span>
                    </td>
                    <td class="px-4 py-4">
                      <span class="px-3 py-1 text-sm font-medium rounded-full
                        <%= case task.status
                            when 'pending' then 'bg-gray-100 text-gray-800'
                            when 'progress' then 'bg-blue-100 text-blue-800'
                            when 'done' then 'bg-green-100 text-green-800'
                            end %>">
                        <%= task.status %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-600">Chưa có task nào. Bấm "Chỉnh sửa" để thêm.</p>
        <% end %>
      </div>
    </div>
  </div>
    </div>
  </div>

<% end %>
