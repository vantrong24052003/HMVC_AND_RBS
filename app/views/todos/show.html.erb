<%= turbo_frame_tag "todo_details_frame" do %>
  <div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Chi tiết Todo</h1>
    <div class="flex space-x-3">
      <a href="<%= edit_todo_path(@form) %>" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg transition-colors">
        Chỉnh sửa
      </a>
      <a href="<%= todos_path %>" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors">
        Quay lại
      </a>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Thông tin cơ bản -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin cơ bản</h2>

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Tiêu đề</label>
              <p class="text-lg text-gray-900"><%= @form.title %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
              <p class="text-gray-900 whitespace-pre-wrap"><%= @form.description %></p>
            </div>
          </div>
        </div>

        <!-- Trạng thái và độ ưu tiên -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Trạng thái</h2>

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Độ ưu tiên</label>
              <span class="px-3 py-1 text-sm font-medium rounded-full
                <%= case @form.priority
                    when 'low' then 'bg-green-100 text-green-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    when 'high' then 'bg-red-100 text-red-800'
                    end %>">
                <%= @form.priority %>
              </span>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
              <span class="px-3 py-1 text-sm font-medium rounded-full
                <%= case @form.status
                    when 'pending' then 'bg-gray-100 text-gray-800'
                    when 'progress' then 'bg-blue-100 text-blue-800'
                    when 'done' then 'bg-green-100 text-green-800'
                    end %>">
                <%= @form.status %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Thông tin bổ sung -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin bổ sung</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">ID</label>
            <p class="text-gray-900"><%= @form.id %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Ngày tạo</label>
            <p class="text-gray-900"><%= @form.created_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Cập nhật lần cuối</label>
            <p class="text-gray-900"><%= @form.updated_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
