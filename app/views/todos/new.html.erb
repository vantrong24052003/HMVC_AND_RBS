<%= render 'shared/flash', errors: @form&.errors&.full_messages || [] %>

<div class="max-w-md mx-auto p-6">
  <%= form_with scope: :todo, url: todos_path, method: :post, class: "space-y-4 bg-white p-6 rounded-lg shadow border" do |f| %>
    <h2 class="text-xl font-bold mb-4">Tạo Todo Mới</h2>
    
    <div>
      <%= f.label :title, "Tiêu đề", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :description, "Mô tả", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :description, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :priority, "Độ ưu tiên", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :priority, options_for_select(Todos::NewForm.priority.values.map { |priority| [priority.humanize, priority] }), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :status, "Trạng thái", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, options_for_select(Todos::NewForm.status.values.map { |status| [status.humanize, status] }), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="flex space-x-3">
      <%= f.submit "Tạo Todo", class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded font-medium" %>
      <%= link_to "Hủy", todos_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded font-medium" %>
    </div>
  <% end %>
</div>
