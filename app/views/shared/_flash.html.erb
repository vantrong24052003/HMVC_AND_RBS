<% if flash[:notice] %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 relative" data-controller="flash">
    <span class="block sm:inline"><%= flash[:notice] %></span>
    <button data-action="click->flash#close" class="absolute top-0 right-0 px-4 py-3">
      <span class="sr-only">Đóng</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 relative" data-controller="flash">
    <span class="block sm:inline"><%= flash[:alert] %></span>
    <button data-action="click->flash#close" class="absolute top-0 right-0 px-4 py-3">
      <span class="sr-only">Đóng</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>

<% if errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 relative" data-controller="flash">
    <ul class="list-disc pl-5">
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <button data-action="click->flash#close" class="absolute top-0 right-0 px-4 py-3">
      <span class="sr-only">Đóng</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>
