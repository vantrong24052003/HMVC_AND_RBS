#!/usr/bin/env ruby
# frozen_string_literal: true

# Security scan script for Rails 8 project
# Usage: bin/security-scan

require 'rubygems'
require 'bundler/setup'

puts "ğŸ”’ Running Brakeman security scan..."
puts "Rails version: #{Rails.version}" if defined?(Rails)

# Run Brakeman with config
system("bin/brakeman --config config/brakeman.yml --no-pager --format text")

exit_code = $?.exitstatus

case exit_code
when 0
  puts "âœ… Security scan completed successfully - No issues found"
when 1
  puts "âš ï¸  Security scan completed with warnings"
when 2
  puts "âŒ Security scan found errors"
when 3
  puts "âŒ Security scan failed to run"
when 4
  puts "âŒ Security scan found high confidence warnings"
when 5
  puts "âŒ Brakeman version is outdated"
else
  puts "â“ Security scan exited with unknown code: #{exit_code}"
end

puts "\nğŸ“Š Exit code: #{exit_code}"
puts "ğŸ“ Reports saved to: brakeman-report.json, brakeman-report.html"

exit 0 # Always exit successfully for CI/CD
